mixin item(img, clasification, type, quality, tag1, tag2, tag3)
  .carousel__item
    .item__img
      img(src=img)
    .item__overlay
      .overlay__icons
        i.fas.fa-play
        i.fas.fa-plus
        i.far.fa-thumbs-up
        i.far.fa-thumbs-down
        i.fas.fa-chevron-down
      .overlay__type
        span.clasification=clasification
        span.type=type
        span.quality=quality
      .overlay__tags
        ul.tags
          li=tag1
          li=tag2
          li=tag3
